<div id="carouselExampleIndicators" class="carousel slide" data-ride="carousel">
  <ol class="carousel-indicators">
    <% @item.photos.each do |photo| %>
    <% if @item.photos.index(photo) == 0 %>
    <li data-target="#carouselExampleIndicators" data-slide-to=<%= @item.photos.index(photo).to_s %> class="active"></li>
    <% else %>
     <li data-target="#carouselExampleIndicators" data-slide-to=<%= @item.photos.index(photo).to_s %>></li>
    <% end %>
    <% end %>
  </ol>

  <div class="carousel-inner">
       <% @item.photos.each do |photo| %>
        <% if @item.photos.index(photo) == 0 %>x
    <div class="carousel-item active" >
      <% else %>
         <div class="carousel-item" >
          <% end %>
      <%=cl_image_tag photo.key, class:"d-block w-100" %>
    </div>
    <% end %>

  </div>
  <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
    <span class="sr-only">Previous</span>
  </a>
  <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
    <span class="carousel-control-next-icon" aria-hidden="true"></span>
    <span class="sr-only">Next</span>
  </a>
</div>

