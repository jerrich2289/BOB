<%# Om jeg legge til en HTML-klasse: %>
<%# , wrapper_html: { class: 'class_name' } %>
<div class='arrow'>
  <div class="new-item-container">
    <div class="title-white">
      <a class="material-icons" href="javascript:history.back()">keyboard_backspace</a>
        <h1>Add item</h1>
    </div>

    <div>
      <%= simple_form_for @item do |f| %>
       <div id="preview"></div>
       <div class= "upload-btn-wrapper">
      <label class="file required btn-upload" for="item_photos"><span class="material-icons">perm_media</span>Upload images <abbr title="required">*</abbr></label></div>
      <%= f.input :photos, as: :file, input_html: { multiple: true }, wrapper_html: { class: "img-upload-btn" }, id: "browse" %>
      <!-- <span class="material-icons outline-btn ">perm_media</span> -->
      <%= f.input :name, label: 'Item name' %>
      <%= f.input :description, as: :text, label: 'Description (optional)' %>
      <%#= f.input :size, collection: 1..6, as: :select, label: 'Your items size is equal to or larger than a ...' %>
    <div class='container-sizechart'>
      <h2 class='text-center' id='body-font'> Would you say your item is equal to or smaller than:</h2>
    </div>
    <div class=wrapper>
    <div class='container-sizechart'>
      <button name="item[size]" value="1">
        <%=image_tag("fork.jpg", :class => "avatar-120")%>
      </button>
      <button name="item[size]" value="2">
        <%=image_tag("book.jpg", :class => "avatar-120")%>
      </button>
    </div>

    <div class='container-sizechart'>
      <button name="item[size]" value="3">
        <%=image_tag("Coffee Table.jpg", :class => "avatar-120")%>
      </button>
      <button name="item[size]" value="4">
        <%=image_tag("Office_Chair.jpg", :class => "avatar-120")%>
      </button>
    </div>

    <div class='container-sizechart'>
      <button name="item[size]" value="5">
        <%=image_tag("fridge.jpg", :class => "avatar-120")%>
      </button>
      <button name="item[size]" value="6">
        <%=image_tag("Car.jpg", :class => "avatar-120")%>
      </button>
      <% end %>
    </div>
  </div>
</div>

